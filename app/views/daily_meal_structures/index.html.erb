<div class="max-w-6xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Daily Meal Structures</h1>
    <p class="text-gray-600">Define your meal schedules and food categories for each meal.</p>
  </div>

  <%# New Structure Button %>
  <div class="mb-6">
    <%= link_to "Create New Meal Structure",
                new_daily_meal_structure_path,
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <%# Structures List %>
  <div id="daily_meal_structures_list" class="space-y-4">
    <% if @daily_meal_structures.any? %>
      <%= render @daily_meal_structures %>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No meal structures yet</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new meal structure above.</p>
      </div>
    <% end %>
  </div>
</div>
