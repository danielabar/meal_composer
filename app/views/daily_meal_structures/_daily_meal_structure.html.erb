<div id="daily_meal_structure_<%= daily_meal_structure.id %>"
     class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-xl font-semibold text-gray-900"><%= daily_meal_structure.name %></h3>
      <p class="text-sm text-gray-500 mt-1">
        <%= pluralize(daily_meal_structure.meal_definitions.count, 'meal') %>
      </p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit",
                  edit_daily_meal_structure_path(daily_meal_structure),
                  class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
      <%= link_to "Duplicate",
                  duplicate_daily_meal_structure_path(daily_meal_structure),
                  data: { turbo_method: :get },
                  class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
      <%= button_to "Delete",
                    daily_meal_structure_path(daily_meal_structure),
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure?" } },
                    class: "text-red-600 hover:text-red-900 text-sm font-medium" %>
    </div>
  </div>

  <div class="space-y-3">
    <% daily_meal_structure.meal_definitions.each do |meal_def| %>
      <div class="border-l-4 border-indigo-500 pl-4">
        <h4 class="font-medium text-gray-900 capitalize"><%= meal_def.label %></h4>
        <div class="mt-1 flex flex-wrap gap-2">
          <% meal_def.food_categories.each do |category| %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <%= category.description %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
