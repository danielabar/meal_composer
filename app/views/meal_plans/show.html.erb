<div class="max-w-5xl mx-auto">
  <%# Header %>
  <div class="mb-8 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @meal_plan.name %></h1>
      <div class="text-sm text-gray-600 space-y-1">
        <p>
          Using:
          <span class="font-medium text-gray-900"><%= @meal_plan.daily_macro_target.name %></span>
          +
          <span class="font-medium text-gray-900"><%= @meal_plan.daily_meal_structure.name %></span>
        </p>
        <p>Generated <%= time_ago_in_words(@meal_plan.created_at) %> ago</p>
      </div>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to "Generate Another", new_meal_plan_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
      <%= button_to "Delete Plan",
                    meal_plan_path(@meal_plan),
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure you want to delete this meal plan?" } },
                    class: "px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-md hover:bg-red-700" %>
    </div>
  </div>

  <%# Macro Summary Card %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Daily Macros Summary</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <%# Carbs %>
      <div>
        <div class="text-sm font-medium text-gray-500 mb-1">Carbohydrates</div>
        <div class="flex items-baseline space-x-2">
          <span class="text-2xl font-bold text-gray-900"><%= @meal_plan.actual_carbs_grams.round %>g</span>
          <span class="text-sm text-gray-500">/ <%= @meal_plan.target_carbs_grams.round %>g</span>
        </div>
        <% diff = @meal_plan.macro_differences[:carbs] %>
        <div class="mt-1 text-xs <%= diff.abs <= 8 ? 'text-green-600' : 'text-yellow-600' %>">
          <%= diff >= 0 ? "+" : "" %><%= diff.round(1) %>g difference
        </div>
      </div>

      <%# Protein %>
      <div>
        <div class="text-sm font-medium text-gray-500 mb-1">Protein</div>
        <div class="flex items-baseline space-x-2">
          <span class="text-2xl font-bold text-gray-900"><%= @meal_plan.actual_protein_grams.round %>g</span>
          <span class="text-sm text-gray-500">/ <%= @meal_plan.target_protein_grams.round %>g</span>
        </div>
        <% diff = @meal_plan.macro_differences[:protein] %>
        <div class="mt-1 text-xs <%= diff.abs <= 8 ? 'text-green-600' : 'text-yellow-600' %>">
          <%= diff >= 0 ? "+" : "" %><%= diff.round(1) %>g difference
        </div>
      </div>

      <%# Fat %>
      <div>
        <div class="text-sm font-medium text-gray-500 mb-1">Fat</div>
        <div class="flex items-baseline space-x-2">
          <span class="text-2xl font-bold text-gray-900"><%= @meal_plan.actual_fat_grams.round %>g</span>
          <span class="text-sm text-gray-500">/ <%= @meal_plan.target_fat_grams.round %>g</span>
        </div>
        <% diff = @meal_plan.macro_differences[:fat] %>
        <div class="mt-1 text-xs <%= diff.abs <= 8 ? 'text-green-600' : 'text-yellow-600' %>">
          <%= diff >= 0 ? "+" : "" %><%= diff.round(1) %>g difference
        </div>
      </div>
    </div>

    <% if @meal_plan.within_tolerance %>
      <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-md">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-green-800">
              All macros are within tolerance (±8g)
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mt-4 pt-4 border-t border-gray-200 text-sm text-gray-600">
      <p>Total: <%= @meal_plan.total_foods %> foods, <%= @meal_plan.total_grams.round %>g total weight</p>
    </div>
  </div>

  <%# Meals %>
  <% @meal_plan.meals.order(:meal_type).each do |meal| %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4"><%= meal.meal_type_label %></h2>

      <%# Food List %>
      <div class="space-y-3 mb-4">
        <% meal.food_portions.each do |portion| %>
          <div class="flex justify-between items-start py-2 border-b border-gray-100 last:border-0">
            <div class="flex-1">
              <div class="text-sm font-medium text-gray-900">
                <%= portion.food.description %>
              </div>
            </div>
            <div class="ml-4 text-sm font-medium text-gray-700">
              <%= portion.grams.round(1) %>g
            </div>
          </div>
        <% end %>
      </div>

      <%# Meal Macros %>
      <div class="pt-4 border-t border-gray-200">
        <div class="flex justify-between text-sm">
          <span class="font-medium text-gray-700">Meal Macros:</span>
          <span class="text-gray-900">
            <%= meal.actual_carbs_grams.round %>g C |
            <%= meal.actual_protein_grams.round %>g P |
            <%= meal.actual_fat_grams.round %>g F
          </span>
        </div>
      </div>
    </div>
  <% end %>

  <%# Actions %>
  <div class="flex justify-between items-center pt-6">
    <%= link_to "← Back to My Plans", meal_plans_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
    <%= link_to "Generate Another Plan",
                new_meal_plan_path,
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
</div>
